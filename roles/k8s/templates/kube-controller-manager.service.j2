[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-controller-manager \\
  --bind-address=0.0.0.0 \\
  --cluster-cidr={{ cluster_cidr }} \\
  --cluster-name={{ cluster_name }} \\
  --cluster-signing-cert-file={{ control_plane_cert_and_context_dir }}/ca.pem \\
  --cluster-signing-key-file={{ control_plane_cert_and_context_dir }}/ca-key.pem \\
  --kubeconfig={{ control_plane_cert_and_context_dir }}/kube-controller-manager.kubeconfig \\
  --leader-elect=true \\
  --root-ca-file={{ control_plane_cert_and_context_dir }}/ca.pem \\
  --service-account-private-key-file={{ control_plane_cert_and_context_dir }}/service-account-key.pem \\
  --service-cluster-ip-range={{ service_cluster_ip_range }} \\
  --use-service-account-credentials=true \\
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target