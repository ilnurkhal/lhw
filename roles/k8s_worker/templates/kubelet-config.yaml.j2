kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "{{ kubelet_ca_dir }}/ca.pem"
authorization:
  mode: Webhook
clusterDomain: "{{ cluster_name }}"
clusterDNS:
  - "10.32.0.10"
resolvConf: "/run/systemd/resolve/resolv.conf"
runtimeRequestTimeout: "15m"
tlsCertFile: "/var/lib/kubelet/{{ inventory_hostname_short }}.pem"
tlsPrivateKeyFile: "/var/lib/kubelet/{{ inventory_hostname_short }}-key.pem"